    <script>    
        function validate() {    
            var name = document.reg_form.name;    
            var email = document.reg_form.email;    
            var password = document.reg_form.password;    
            var phone n0= document.reg_form.phone number;    
            var gender= document.reg_form.gender;    
            var zipcode = document.reg_form.zipcode;    
            var language= document.reg_form.language;  
            var address= document.reg_form.address;  
    
            if (name.value.length <= 0) {    
                alert("Name is required");    
                name.focus();    
                return false;    
            }    
            if (email.value.length <= 0) {    
                alert("email id is required");    
                email.focus();    
                return false;    
            }    
            if (phone no.value.length <= 0) {    
                alert("Address is required");    
                address.focus();    
                return false;    
            }    
            if (gender.value.length <= 0) {    
                alert("Gender is required");    
                gender.focus();    
                return false;    
            }    
            if (zipcode.value.length <= 0) {    
                alert("zipcode is required");    
                zipcode.focus();    
                return false;    
            }    
            if (language.value=="select language") {    
                alert("please select language");    
                language.focus();    
                return false;    
            }    
            if (address.value == "select course") {    
                alert("address is missing");    
                address.focus();    
                return false;    
            }    
            return false;    
        }    
    </script>    
</head>    
